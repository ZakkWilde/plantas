<mvc:View controllerName="ovly.plantas.controller.View1" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<List items="{/A_Plant}" growing="true" growingScrollToLoad="true" growingThreshold="10" >
						<StandardListItem title="{Plant}" description="{PlantName}" />
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>